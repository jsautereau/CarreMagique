<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.juliensautereau.carremagique.ScoreTab">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mode Facile"
        android:textSize="25dp" />

    <ListView android:id="@+id/listViewFacile" android:layout_width="wrap_content" android:layout_height="wrap_content" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mode Moyen"
            android:textSize="25dp" />

    <ListView android:id="@+id/listViewMoyen" android:layout_width="wrap_content" android:layout_height="wrap_content" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mode Difficile"
        android:textSize="25dp" />

    <ListView android:id="@+id/listViewDifficile" android:layout_width="wrap_content" android:layout_height="wrap_content" />

</LinearLayout>